{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "jsonrpc": {
      "enum": ["2.0"]
    },
    "id": {
      "type": "string"
    },
    "method": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "centralURI": {
                "type": "string"
              },
              "dfspURI": {
                "type": "string"
              },
              "currency": {
                "type": "string"
              }
            },
            "required": [
              "centralURI",
              "dfspURI",
              "currency"
            ]
          }
        }
      },
      "required": [
        "users"
      ]
    }
  },
  "required": [
    "jsonrpc",
    "id",
    "method",
    "params"
  ]
}