{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "account": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      },
      "required": [
        "currency",
        "address"
      ]
    }
  },
  "required": [
    "name",
    "account"
  ]
}